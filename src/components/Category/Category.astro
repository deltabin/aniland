---
import CategoryItem from "./CategoryItem.astro";

interface IResponseCategory {
  id: number;
  label: string;
  image: string;
}

const response = await fetch(
  "https://664ed81bfafad45dfae13e27.mockapi.io/category",
);

const data: IResponseCategory[] = await response.json();
---

<section
  class="flex mt-[5.125rem] mb-[4.063rem] mx-[5.75rem] justify-between items-center"
>
  {data.map(({ image, label }) => <CategoryItem image={image} label={label} />)}
</section>
