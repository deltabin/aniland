---

<section class="mt-[53px]">
  <div>
    <h1 class="font-bold text-[5.25rem] text-[#3BC853]">Blogs</h1>
    <h2 class="text-[3.106rem] text-[#E3EAE6]">
      <span class="font-semibold">Learn</span>
      new
      <span class="font-semibold">facts</span> about
      <span class="font-semibold">animals</span>
    </h2>
  </div>
  <div
    class="flex overflow-x-auto space-x-4 mt-4"
    onwheel="this.scrollLeft+=event.deltaY>0?100:-100"
  >
    {
      data.map(({ title, description, image }) => (
        <BlogsItem title={title} description={description} image={image} />
      ))
    }
  </div>
</section>
